<h2>Welcome <%= @user.email %> </h2>
<div class='container'>
    <div class="menue">
        
    </div>
    <div class='leftMenue'>
        <h4 class='addSongTitle' >Add Song To Playlist</h4>
        <hr>
        <div class='searchResults'>
        </div>
        
    </div>
    <div class='currentSong'>
          
    </div> 
    <div class=rightMenue>
        <div class='playListInfo'>
            <h4 class='addPlayLists'>Add New Playlist</h4><br><hr>
            <%= form_tag playlists_path, remote: true do %>
                <%= hidden_field_tag :user_id, @user.id %>
                <%= search_field_tag :name %>
                <%= submit_tag "Add" %>
            <% end %>
            <div class='addToPlayList'>
                <%= render 'showing_playlists' %>
            </div>
        </div>
    </div>
</div>

<div class='audioFiles'>
	<audio src="" class="songPlace"> 
</div>